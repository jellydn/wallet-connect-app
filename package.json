{
  "name": "wallet-connect-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "lint": "next lint",
    "prepare": "husky install",
    "start": "next start"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,json}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": {
    "importOrder": [
      "^@core/(.*)$",
      "^@server/(.*)$",
      "^@ui/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "semi": true
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "0.12.3",
    "ethers": "5.7.2",
    "next": "13.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sharp": "0.31.3",
    "wagmi": "0.12.6"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/react": "18.0.28",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "prettier": "2.8.6",
    "sort-package-json": "2.4.1",
    "typescript": "4.9.5"
  }
}
