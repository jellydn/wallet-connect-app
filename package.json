{
  "name": "wallet-connect-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "lint": "next lint",
    "prepare": "husky install",
    "start": "next start"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,json}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": {
    "importOrder": [
      "^@core/(.*)$",
      "^@server/(.*)$",
      "^@ui/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "semi": true
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "0.2.0",
    "ethers": "5.6.8",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "wagmi": "0.4.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/react": "^18.0.9",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "husky": ">=8.0.1",
    "lint-staged": "12.4.2",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.57.0",
    "typescript": "4.7.2"
  }
}
