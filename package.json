{
  "name": "wallet-connect-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "lint": "next lint",
    "prepare": "husky install",
    "start": "next start"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,json}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": {
    "importOrder": [
      "^@core/(.*)$",
      "^@server/(.*)$",
      "^@ui/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "semi": true
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "0.12.18",
    "ethers": "5.8.0",
    "next": "13.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sharp": "0.34.3",
    "wagmi": "0.12.19"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/react": "18.3.23",
    "eslint": "8.57.1",
    "eslint-config-next": "13.5.11",
    "husky": "8.0.3",
    "lint-staged": "13.3.0",
    "prettier": "2.8.8",
    "sort-package-json": "2.15.1",
    "typescript": "5.9.2"
  }
}
